{
	"scripts": {
		"serve": "node ./dist/index.js",
		"clean": "rimraf dist .parcel-cache",
		"build:server": "parcel build './src/index.tsx' --target=server",
		"build:client": "parcel build './src/pages/**/*.html' --target=client",
		"build": "pnpm run clean && pnpm run build:client && pnpm run build:server",
		"start": "nodemon --watch src -e ts,tsx,html,css --exec \"pnpm run build && pnpm run serve\"",
		"start:client": "nodemon --watch src/pages -e ts,tsx,html,css --exec \"pnpm run build:client\"",
		"start:server": "nodemon --watch src --ignore src/pages -e ts --exec \"pnpm run build:server && pnpm run serve\""
	},
	"devDependencies": {
		"@parcel/config-default": "^2.3.2",
		"@parcel/core": "^2.3.2",
		"@parcel/reporter-cli": "^2.3.2",
		"@parcel/transformer-css": "^2.4.0",
		"@types/compression": "^1.7.2",
		"@types/consolidate": "^0.14.1",
		"@types/express": "^4.17.13",
		"@types/method-override": "^0.0.32",
		"@types/node": "^17.0.21",
		"@types/react": "^17.0.40",
		"@types/react-dom": "^17.0.13",
		"nodemon": "^2.0.15",
		"parcel": "^2.3.2",
		"postcss": "^8.4.12",
		"rimraf": "^3.0.2",
		"tailwindcss": "^3.0.23",
		"zx": "^5.3.0"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"consolidate": "^0.16.0",
		"express": "^4.17.3",
		"express-handlebars": "^6.0.3",
		"handlebars": "^4.7.7",
		"method-override": "^3.0.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.2.2"
	},
	"targets": {
		"server": {
			"distDir": "./dist",
			"engines": {
				"node": ">= 12"
			}
		},
		"client": {
			"distDir": "./dist/pages"
		}
	},
	"@parcel/transformer-css": {
		"drafts": {
			"nesting": true,
			"customMedia": true
		}
	}
}